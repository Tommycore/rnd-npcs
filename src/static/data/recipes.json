{
  "$schema": "./recipes-schema.json",
  "recipes":
  [
    {
      "name": "person",
      "icon": "far fa-id-card",
      "label": "RNDNPCS.CONTROLS.PERSON",
      "folderSetting": "people",
      "categories":
      [
        {
          "label": "RNDNPCS.CATEGORIES.ID",
          "fields":
          [
            {
              "name": "full_name",
              "formulas": [ "[self:first_name] [self:last_name]" ],
              "order": 10
            },
            {
              "name": "first_name",
              "label": "RNDNPCS.PERSON.FIRST_NAME",
              "formulas": [ "[faker:name.firstName]" ],
              "propagates": [ "nick_name", "email", "full_name" ]
            },
            {
              "name": "last_name",
              "label": "RNDNPCS.PERSON.LAST_NAME",
              "formulas": [ "[faker:name.lastName]" ],
              "propagates": [ "nick_name", "email", "full_name" ]
            },
            {
              "name": "nick_name",
              "label": "RNDNPCS.PERSON.NICK_NAME",
              "formulas":
              [
                "[faker:hacker.ingverb][self:first_name]",
                "I am [self:first_name] [self:last_name]",
                "[self:first_name] is [faker:company.catchPhraseAdjective]",
                "[self:last_name] is [faker:company.catchPhraseAdjective]",
                "[faker:commerce.department] & [faker:commerce.department] [faker:commerce.productAdjective]",
                "[faker:company.catchPhraseAdjective] [faker:commerce.productMaterial] [faker:animal.type]",
                "[self:first_name][pick_one:.:_:-:_xXx_:-X-][self:last_name]"
              ],
              "propagates": [ "email" ],
              "post_proc": [ {"chance": 0.5, "processPool": ["slugify", "tolower", "camelcase"]} ],
              "order": 10
            },
            {
              "name": "email",
              "label": "RNDNPCS.PERSON.EMAIL",
              "formulas": [ "[faker:internet.email:[self:first_name]:[self:last_name]]" ],
              "post_proc": [ {"chance": 1, "processPool": ["slugify"]} ],
              "order": 20
            }
          ]
        },
        {
          "label": "RNDNPCS.CATEGORIES.JOB",
          "fields":
          [
            {
              "name": "job",
              "label": "RNDNPCS.PERSON.JOB",
              "formulas": [ "[faker:company.companyName]" ]
            },
            {
              "name": "company",
              "label": "RNDNPCS.PERSON.COMPANY",
              "formulas": [ "[faker:name.jobTitle]" ]
            }
          ]
        }
      ],
      "actions":
      [
        {
          "label": "RNDNPCS.MISC.REDO_ALL",
          "icon": "fas fa-redo",
          "action": "redo"
        },
        {
          "label": "RNDNPCS.MISC.TO_JE",
          "icon": "fas fa-book-open",
          "action": "export_to_je",
          "args": "full_name",
          "is_highlighted": true
        }
      ]
    },
    {
      "name": "corp",
      "icon": "fas fa-store",
      "label": "RNDNPCS.CONTROLS.CORP",
      "categories":
      [
        {
          "label": "RNDNPCS.CONTROLS.CORP",
          "fields":
          [
            {
              "name": "name",
              "label": "RNDNPCS.CORP.NAME",
              "formulas": [ "[faker:company.companyName]" ],
              "post_proc":
              [
                { "chance": 0.25, "processPool": [ "camelcase", "slugify" ] }
              ]
            },
            {
              "name": "ceo",
              "label": "RNDNPCS.CORP.CEO",
              "formulas": [ "[faker:name.firstName] [faker:name.lastName]" ]
            },
            {
              "name": "area",
              "label": "RNDNPCS.CORP.AREA",
              "formulas": [ "[faker:commerce.department]" ]
            },
            {
              "name": "slogan",
              "label": "RNDNPCS.CORP.SLOGAN",
              "formulas": [ "[faker:company.catchPhrase]" ]
            },
            {
              "name": "latest_product",
              "label": "RNDNPCS.CORP.LATEST_PRODUCT",
              "formulas": [ "[faker:commerce.productName]" ]
            }
          ]
        }
      ]
    }
  ]
}